<%- include("../partials/head.ejs")%>
<body>
    <!--Navbar-->
    <%- include("../partials/header.ejs")%>
    <main>
        <h1>Iniciar sesión</h1>
        <form action="/user/login" method="POST" name="login">
            <label for="correo">Correo electrónico</label>
            <input type="email" name="correo" id="correo"><br>

            <label for="contraseña">Contraseña</label>
            <input type="password" name="contraseña" id="contraseña" required pattern=".{8,72}"><br>

            <div class="recordar"><label for="recordarme" class="recordarme"><input type="checkbox" id="recordarme" value="recordarme"> Recordarme</label>
                <a href="" class="recordarme">¿Olvidaste la contraseña?</a></div>

            <input name="enviar" id="enviar" type="submit" value="Iniciar sesión">
            <p class="registrarse">¿No tienes una cuenta? <a href="/user/register">Registrate ahora</a></p>
        </form>
    </main>
    <%- include("../partials/footer.ejs")%>
</body>
</html>