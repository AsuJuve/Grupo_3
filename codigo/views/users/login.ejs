<%- include("../partials/head.ejs")%>
<body>
    <!--Navbar-->
    <%- include("../partials/header.ejs")%>
    <main>
        <h1>Iniciar sesión</h1>
        <form action="/users/login" method="POST" name="login" id="form-login">
            <div class="errores">
                <ul type= "none"> 
    
                </ul>
            </div>
            <label for="correo">Correo electrónico</label>
            <input 
                type="text"
                name="customer_email" 
                id="correo"
                value="<%= locals.oldData ? oldData.correo : null%>">
                <br>
            <%if(locals.errors && errors.correo){%>
                <div class="error-text">
                    <p><%=errors.correo.msg%></p>
                </div>
            <%}%>
            <%if(locals.errors && errors.noUser){%>
                <div class="error-text">
                    <p><%=errors.noUser.msg%></p>
                </div>
            <%}%>

            <label for="contra">Contraseña</label>
            <input type="password" name="customer_password" id="contra"><br>
            <%if(locals.errors && errors.contraseña){%>
                <div class="error-text">
                    <p><%=errors.contraseña.msg%></p>
                </div>
            <%}%>

            <div class="recordar">
                <div class="checkboxRecordar">
                    <input type="checkbox" id="recordarme" value="recordarme"  name="recordarme"> 
                    <label for="recordarme" class="recordarme">Recordarme</label>
                </div>
                <a href="" class="recordarme">¿Olvidaste la contraseña?</a></div>

            <input name="enviar" id="enviar" type="submit" value="Iniciar sesión">
            <p class="registrarse">¿No tienes una cuenta? <a href="/users/register">Registrate ahora</a></p>
        </form>
    </main>
    <%- include("../partials/footer.ejs")%>
    <script src='/js/loginValidator.js' type='text/javascript'>
    </script>
</body>
</html>