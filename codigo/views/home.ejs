<%- include("./partials/head.ejs") %> 
<body>
    <!--Navbar-->
    <%- include("./partials/header.ejs") %>
    <main>
        <!--Seccion Principal-->
        <section class="section-main">
            <div class="img-principal-div">
                <img src="/images/principal-img.jpeg" alt="Imagen principal" class="principal-img">
            </div>
            <article class="main-article">
                    <header class="principal-header">
                        Continuar aprendiendo, nunca está de más!
                    </header>
                    <p class="principal-p">
                        Bienvenido a Keep Learning, una de las plataformas de educación en línea más eficaces actualmente.
                    </p>
                    <div class="btns-principal">
                        <%if(userLogged){if(userLogged.customer_type=="admin"){%>
                                <a href="/products" target="_parent">
                                    <button class = "btn-nuevoCurso">Ver todos los cursos</button>
                                </a>
                            <%}}if(!userLogged){%>
                        <a href="/users/login">
                        <button class="btn-log-in">Iniciar Sesion</button>
                        </a>
                        <a href="/users/register">
                            <button class="btn-register">Registrate</button>
                        </a>
                        <%}%>
                    </div>
            </article>
        </section>
        <section class="Courses">
            <div class="CoursesCategories">
                <div id="programming">
                    <h3 class="CarouselName">Programación</h3>
                </div>
                <div id="web">
                    <h3 class="CarouselName">Desarrollo Web</h3>
                </div>
                <div id="data-science">
                    <h3 class="CarouselName">Ciencia de Datos</h3>
                </div>
                <div id="mobile">
                    <h3 class="CarouselName">Desarrollo Móvil</h3>
                </div>
            </div>
            <!--Programacion-->
            <%- include("./partials/carousel.ejs") %>
        </section>
        <!--Cursos Populares-->
        <div class="PopularCourses">
            <h2 class="CarouselTitle">Cursos más populares</h2>
            <%- include("./partials/carousel.ejs") %>
        </div>
    </main>
    <%- include("./partials/footer.ejs") %>
</body>
</html>